<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1a9ddf</item>
        <item name="colorPrimaryDark">#1a9ddf</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="actionBarStyle">@style/MyActionBar.ActionBarStyle</item>-->
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@drawable/default_listdivider</item>

        <item name="colorPrimary">#1a9ddf</item>
        <item name="colorPrimaryDark">#1a9ddf</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar.ActionBarStyle</item>
    </style>

    <style name="MyActionBar.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="OverlayActionBar" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
</resources>
