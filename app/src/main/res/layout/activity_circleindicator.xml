<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.quenice.optimize.viewpagerandindicator.circleindicator.widget.CirclePagerIndicator
        android:id="@+id/indicator"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:cpiCircleColor="@color/colorPrimary"
        app:cpiCircleStorkColor="@color/colorAccent"
        app:cpiCircleStorkWidth="6dp"
        app:cpiInterval="20dp"
        app:cpiPointColor="@android:color/white"
        app:cpiRadius="12dp"/>
</RelativeLayout>